---
import { Icon } from 'astro-icon/components'
const { type = 'info', title, small, className } = Astro.props;
---
<style is:global>
.aside {
  @apply p-4;
  @apply rounded-lg;
  @apply border;
  @apply border-neutral-500;
  @apply bg-neutral-300/5;
  margin-bottom: 2rem;
}
.aside h6 {
  font-size: 0.8em;
  display: flex;
  flex-direction: row;
  align-items: center;
}
.aside h6 {
  @apply text-neutral-400;
}
.aside svg {
  @apply mr-2;
}
.aside.aside ul,
.aside.aside ol {
  margin: 0.5rem 0;
}
.aside.aside li:not(:last-child) {
  margin-bottom: 0.5rem;
}
.aside.aside p,
.aside.aside pre {
  margin-bottom: 0rem;
}
.aside p:last-child,
.aside pre:last-child {
  margin: 0;
}
.aside-small {
  @apply text-sm;
  line-height: 1.4;
}
.aside-small svg {
  @apply mr-2;
}
.aside-small h6 {
  font-size: 1em;
}
</style>

<aside class={`aside aside-${type} ` + (small ? ' aside-small' : '') + (className ? ' ' + className : '')}>
  {title &&
    <h6><Icon name='octicon:info-16' /><span>{title}</span></h6>
  }
  <slot />
</aside>
